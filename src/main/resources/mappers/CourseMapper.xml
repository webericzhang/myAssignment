    <insert id="save" parameterType="com.eric.library.core.domain.DetailedCourse">
        INSERT INTO courses
        (idCourse, title, level, hoursLong, active, idTeacher)
        VALUES
        (NEXT VALUE FOR coursesSeq, #{title}, #{level}, #{hoursLong}, #{active}, #{teacher.idTeacher})
    </insert>
 -->   
    <insert id="save" parameterType="com.eric.library.core.domain.DetailedCourse">
        INSERT INTO courses
        (title, level, hoursLong, active, idTeacher)
        VALUES
        (#{title}, #{level}, #{hoursLong}, #{active}, 1)
    </insert>
    
    <delete id="delete" parameterType="com.eric.library.core.domain.DetailedCourse">
        DELETE FROM courses
    </delete>

</mapper>